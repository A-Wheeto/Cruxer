<div class="container bg-light justify-content-between align-items-center py-2 rounded d-flex">
  <div>
    <h1>
      <%= @location.name %>
    </h1>
  </div>
  <div>
  <i class="bi bi-arrow-left-circle-fill"></i>
    <%= link_to "Back", locations_path %>
  </div>
</div>
<div class="container bg-light my-2 p-2 rounded">
  <div class="row">
    <div class="col-lg-6">
      <% if @location.address? %>
        <p><i class="bi bi-geo-alt px-2"></i><%= @location.address %></p>
      <% end %>
      <% if @location.phone? %>
        <p><i class="bi bi-telephone px-2"></i><%= @location.phone %></p>
      <% end %>
      <% if @location.email? %>
        <p><i class="bi bi-envelope-at px-2"></i><%= mail_to @location.email, @location.email %></p>
      <% end %>
      <% if @location.website? %>
        <p><i class="bi bi-browser-chrome px-2"></i><%= link_to @location.website, @location.website %></p>
      <% end %>
    </div>
    <div class="col-lg-6">
      <iframe style="height:100%;width:100%;border:0;" frameborder="0" src=<%=  google_map_url(@location.name) %>></iframe></div>
      <style>#canvas-for-googlemap .text-marker{}.map-generator{max-width: 100%; max-height: 100%; background: none;}</style>
    </div>
  </div>
  <div class="container bg-light text-center p-2 rounded">
  <h3>
    Lastest posts
  </h3>
  </div>
</div>
